@using Jobby.Client.ViewModels.Board
@model UpdateBoardViewModel

<div class="w-full max-w-lg border-1 border-gray-900 h-max p-8 flex flex-col gap-y-4">
    <h1 class="text-2xl font-semibold">Update Board - @Model.Name</h1>
    <form asp-controller="Board" asp-action="Update" class="flex flex-col gap-6" method="post">
        <div class="flex flex-col gap-y-3">
            <label asp-for="Name" class="text-base"></label>
            <input asp-for="Name" class="border-1 border-gray-300 border-b-[#001534] border-b-2 h-10 w-full max-w-md px-5">
        </div>
        @Html.HiddenFor(model => model.BoardId)
        <button type="submit" class="font-link flex w-full max-w-sm cursor-pointer items-center justify-center py-3 font-semibold border-[1px] border-purple-600 bg-purple-100 hover:bg-purple-300 mt-4">Update</button>
    </form>
</div>

