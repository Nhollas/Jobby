<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Jobby keeps track of every detail about your job applications - notes, dates, tasks, job descriptions, salaries, locations, company data and more." />
    <title>Jobby - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/icons.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@100;200;300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header class="w-full flex justify-center">
        <nav class="h-12 w-full max-w-5xl border-gray-900 border-x-1 border-b-1 flex items-center px-8">
            <ul class="flex flex-row gap-x-8">
                <li><a class="text-lg font-semibold" asp-controller="Home" asp-action="Index">Jobby</a></li>
                <li><a class="text-sm font-semibold" asp-controller="Home" asp-action="Features">Features</a></li>
                <li><a class="text-sm font-semibold" asp-controller="Home" asp-action="Documentation">Docs</a></li>
            </ul>
            <ul class="flex flex-row gap-x-8 ml-auto">
                @if (User.Identity.IsAuthenticated)
                {
                    <li><a class="text-sm font-semibold" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                    <li><a class="text-sm font-semibold" asp-controller="Auth" asp-action="Logout">Logout</a></li>
                }
                else
                {
                    <li><a class="text-sm font-semibold" asp-controller="Auth" asp-action="Login">Log In</a></li>
                    <li><a class="text-sm text-white font-semibold bg-main-blue px-5 py-1.5 rounded-lg" asp-controller="Auth" asp-action="Register">Sign Up</a></li>
                }
            </ul>
        </nav>
    </header>
    <main role="main" class="w-full flex justify-center min-h-[calc(100vh_-_9rem)]">
        <div class="border-gray-900 border-x-1 border-b-1 w-full max-w-5xl">
            @RenderBody()
        </div>
    </main>
    <footer class="w-full flex justify-center">
        <section class="w-full h-24 max-w-5xl border-gray-900 border-x-1 flex items-center gap-x-20 px-8">
            <div class="flex flex-col gap-y-2">
                <h1 class="text-xl font-semibold">Jobby</h1>
                <p class="text-sm text-gray-800 font-semibold">&copy; 2022</p>
            </div>
            <div class="flex flex-col gap-y-2">
                <h2 class="uppercase text-base font-semibold">Follow Us</h2>
                <ul class="flex flex-row gap-x-8">
                    <li><a class="text-lg font-semibold" title="Social link to Jobby's Github page" href="https://github.com/Nhollas/Jobby"><i alt="Github" class="bi bi-github"></i></a></li>
                    <li><a class="text-lg font-semibold" title="Social link to Nick Hollas LinkedIn profile" href="https://www.linkedin.com/in/nhollas"><i alt="LinkedIn" class="bi bi-linkedin"></i></a></li>
                </ul>
            </div>
        </section>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
