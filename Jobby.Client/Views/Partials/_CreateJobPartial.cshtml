@using Jobby.Client.ViewModels.JobViewModels
@model CreateJobViewModel

<div class="w-full max-w-md m-8 border-1 border-gray-900 h-max p-8 flex flex-col gap-y-4 bg-gray-50">
    <h1 class="text-2xl font-semibold">Create Job</h1>
    <form asp-controller="Job" asp-action="Create" class="flex flex-col gap-6" method="post">
        <div class="input-container">
            <label asp-for="Title"></label>
            <input asp-for="Title">
        </div>
        <div class="input-container">
            <label asp-for="Company"></label>
            <input asp-for="Company">
        </div>
        <div class="input-container">
            <label asp-for="BoardName"></label>
            <input asp-for="BoardName" value="@Model.BoardName" disabled>
        </div>
        <div class="input-container">
            <label asp-for="JobListName"></label>
            <input asp-for="JobListName" value="@Model.JobListName" disabled>
        </div>
        @Html.HiddenFor(model => model.BoardId)
        @Html.HiddenFor(model => model.JobListId)
        <div class="flex flex-row gap-4 justify-center">
            <button type="button" onclick='hideElement("create-job-parent")' class="btn-secondary py-2 px-4">Cancel</button>
            <button type="submit" class="btn-primary w-full py-2">Create</button>
        </div>
    </form>
</div>


