@using Jobby.Client.ViewModels.JobViewModels
@model DeleteJobViewModel

<div class="w-full max-w-md m-8 border-1 border-gray-900 h-max p-8 flex flex-col gap-y-4 bg-gray-50">
    <h1 class="text-2xl font-semibold">Delete Job</h1>
    <div class="flex flex-col gap-y-2">
        <h2 class="text-xl font-medium">@Model.JobTitle</h2>
        <p>@Model.JobCompany</p>
    </div>
    <p>Are you sure you want to delete this job? </p>
    <form asp-controller="Job" asp-action="Delete" class="flex flex-col gap-6" method="post">
        @Html.HiddenFor(model => model.JobId)
        @Html.HiddenFor(model => model.BoardId)
        <div class="flex flex-row gap-4 justify-center">
            <button type="button" onclick='hideElement("delete-job-parent")' class="btn-secondary py-2 px-4">Cancel</button>
            <button type="submit" class="btn-primary w-full py-2">Delete</button>
        </div>
    </form>
</div>
