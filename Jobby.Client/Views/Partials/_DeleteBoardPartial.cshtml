@using Jobby.Client.Contracts.Board
@model DeleteBoardRequest

<div class="w-full max-w-md m-8 border-1 border-gray-900 h-max p-8 bg-gray-50">
    <form asp-controller="Board" asp-action="Delete" class="flex flex-col gap-6" method="post">
        <h1 class="text-2xl font-semibold text-ellipsis overflow-hidden ... whitespace-nowrap">Delete Board</h1>
        <p>Are you sure you want to delete this board? </p>
        @Html.HiddenFor(model => model.BoardId)
        <p class="flex flex-row gap-4 justify-center">
            <button type="button" onclick='hideElement("delete-board-parent")' class="btn-secondary py-2 px-4">Cancel</button>
            <button type="submit" class="btn-primary w-full py-2">Delete</button>
        </p>
    </form>
</div>



