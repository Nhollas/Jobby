@using Jobby.Client.Contracts.Board
@model CreateBoardRequest

<div class="w-full max-w-md m-8 border-1 border-gray-900 h-max p-8 bg-gray-50">
    <form asp-controller="Board" asp-action="Create" class="flex flex-col gap-y-8" method="post">
        <h1 class="text-2xl font-semibold">Create Board</h1>
        <p class="flex flex-col gap-y-2">
            <label asp-for="Name"></label>
            <input asp-for="Name">
        </p>
        <p class="flex flex-row gap-4 justify-center">
            <button type="button" onclick='hideElement("create-board-parent")' class="btn-secondary py-2 px-4">Cancel</button>
            <button type="submit" class="btn-primary w-full py-2">Create</button>
        </p>
    </form>
</div>

