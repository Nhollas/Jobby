@using Jobby.Client.ViewModels.Job
@model CreateJobViewModel

<div class="w-full max-w-md m-8 border-1 border-gray-900 h-max p-8 flex flex-col gap-y-4 bg-gray-50">
    <h1 class="text-2xl font-semibold">Add Job</h1>
    <form asp-controller="Job" asp-action="Create" class="flex flex-col gap-6" method="post">
        <div class="flex flex-col gap-y-3">
            <label asp-for="Title" class="text-base"></label>
            <input asp-for="Title" class="border-1 border-gray-300 border-b-gray-900 border-b-2 h-10 w-full max-w-md px-5">
        </div>
        <div class="flex flex-col gap-y-3">
            <label asp-for="Company" class="text-base"></label>
            <input asp-for="Company" class="border-1 border-gray-300 border-b-gray-900 border-b-2 h-10 w-full max-w-md px-5">
        </div>
        <div class="flex flex-col gap-y-3">
            <label asp-for="BoardName" class="text-base"></label>
            <input asp-for="BoardName" value="@Model.BoardName" disabled class="border-1 border-gray-300 border-b-gray-900 border-b-2 h-10 w-full max-w-md px-5">
        </div>
        <div class="flex flex-col gap-y-3">
            <label asp-for="JobListName" class="text-base"></label>
            <input asp-for="JobListName" value="@Model.JobListName" disabled class="border-1 border-gray-300 border-b-gray-900 border-b-2 h-10 w-full max-w-md px-5">
        </div>
        @Html.HiddenFor(model => model.BoardId)
        @Html.HiddenFor(model => model.JobListId)
        <div class="flex flex-row gap-4 justify-center">
            <button type="button" class="btn-secondary py-2 px-4 create-job-switch">Cancel</button>
            <button type="submit" class="btn-primary w-full py-2">Create</button>
        </div>
    </form>
</div>

<script>
    $(".create-job-switch").click(function () {
        $("#add-job-partial").toggleClass("hidden");
    });
</script>

