@using Jobby.Client.ViewModels.ActivityViewModels
@model DeleteActivityViewModel

<div class="w-full max-w-md m-8 border-1 border-gray-900 h-max p-8 flex flex-col gap-y-4 bg-gray-50">
    <h1 class="text-2xl font-semibold text-ellipsis overflow-hidden ... whitespace-nowrap">Delete Activtiy - @Model.Title</h1>
    <p>Are you sure you want to delete this activity? </p>
    <form asp-controller="Activity" asp-action="Delete" class="flex flex-col gap-6" method="post">
        @Html.HiddenFor(model => model.BoardId)
        @Html.HiddenFor(model => model.JobId)
        @Html.HiddenFor(model => model.ActivityId)
        <div class="flex flex-row gap-4 justify-center">
            <button type="button" onclick='hideElement("delete-activity-parent")' class="btn-secondary py-2 px-4">Cancel</button>
            <button type="submit" class="btn-primary w-full py-2">Delete</button>
        </div>
    </form>
</div>